{
  "name": "scratchpad-server",
  "version": "0.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "compile": "tsc src/index.ts",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "jest --forceExit",
    "test:api": "npm run migrate:reset:test && jest --forceExit",
    "migrate:make": "knex migrate:make migration -x ts",
    "migrate:latest:dev": "knex migrate:latest --env development",
    "migrate:latest:test": "NODE_ENV=testing knex migrate:latest --env testing",
    "migrate:rollback:test": "NODE_ENV=testing knex migrate:rollback --all",
    "migrate:reset:test": "npm run migrate:rollback:test && npm run migrate:latest:test",
    "migrate:rollback:last": "knex migrate:rollback",
    "migrate:rollback:all": "knex migrate:rollback --all"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/node": "22.5.4",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "dotenv": "16.4.5",
    "eslint": "^9.10.0",
    "globals": "^15.9.0",
    "jest": "29.7.0",
    "nodemon": "3.1.4",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.5.4",
    "typescript-eslint": "^8.5.0"
  },
  "dependencies": {
    "@types/supertest": "6.0.2",
    "body-parser": "1.20.2",
    "express": "4.19.2",
    "express-validator": "7.2.0",
    "knex": "3.1.0",
    "sqlite3": "5.1.7",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.1"
  }
}
